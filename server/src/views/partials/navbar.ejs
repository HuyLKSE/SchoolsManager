                        <svg class="w-4 h-4 text-gray-400 hidden sm:block" fill="none" stroke="currentColor"
                            viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>

                    <!-- Dropdown -->
                    <div id="qlhs-user-dropdown"
                        class="hidden absolute right-0 mt-2 w-56 bg-white rounded-2xl shadow-xl shadow-blue-900/10 border border-blue-100 py-2 transform origin-top-right transition-all duration-200 opacity-0 scale-95 ring-1 ring-black ring-opacity-5">
