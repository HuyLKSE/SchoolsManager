<%- include('../partials/dashboard-layout-header', { title: 'Quản lý Học phí' }) %>

  <div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold font-serif text-gray-900">Học phí</h1>
        <p class="text-gray-500 mt-1">Quản lý các khoản thu và học phí</p>
      </div>
      <% if (user && user.hasPermission && user.hasPermission('canCreate')) { %>
        <a href="/fees/create"
          class="btn bg-blue-600 text-white hover:bg-blue-700 flex items-center gap-2 shadow-md border border-blue-700 transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          <span>Tạo khoản phí</span>
        </a>
        <% } %>
    </div>

    <!-- Filter Section - Squared Modern -->
    <div class="bg-white border border-gray-200 border-l-4 border-l-amber-500 p-5 shadow-sm">
      <form id="filterForm" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="h-5 w-5 text-text-muted" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <input type="text" name="academicYear" placeholder="Năm học (VD: 2023-2024)"
            class="pl-10 form-control w-full rounded-xl border-gray-200 bg-gray-50 focus:bg-white transition-colors text-gray-900 placeholder-gray-400">
        </div>

        <div class="relative">
          <select name="feeType"
            class="form-control w-full rounded-xl border-gray-200 bg-gray-50 focus:bg-white transition-colors appearance-none text-gray-900">
            <option value="">Tất cả loại phí</option>
            <option value="Học phí">Học phí</option>
            <option value="Bảo hiểm">Bảo hiểm</option>
            <option value="Đồng phục">Đồng phục</option>
            <option value="Ăn trưa">Ăn trưa</option>
            <option value="Xe đưa đón">Xe đưa đón</option>
            <option value="Khác">Khác</option>
          </select>
          <div class="absolute inset-y-0 right-0 flex items-center px-3 pointer-events-none text-text-muted">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>
        </div>

        <div class="relative">
          <select name="semester"
            class="form-control w-full rounded-xl border-gray-200 bg-gray-50 focus:bg-white transition-colors appearance-none text-gray-900">
            <option value="">Tất cả học kỳ</option>
            <option value="1">Học kỳ 1</option>
            <option value="2">Học kỳ 2</option>
          </select>
          <div class="absolute inset-y-0 right-0 flex items-center px-3 pointer-events-none text-text-muted">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </div>
        </div>

        <div class="flex gap-2">
          <button type="submit"
            class="btn bg-blue-600 text-white hover:bg-blue-700 flex-1 justify-center shadow-lg shadow-blue-500/20 border-none">Tìm
            kiếm</button>
          <button type="button"
            class="btn bg-white text-gray-700 border border-gray-200 hover:bg-gray-50 px-3 shadow-sm"
            onclick="resetFilters()" title="Đặt lại">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          </button>
        </div>
      </form>

      <!-- Stats Row -->
      <div id="feeStats" class="hidden mt-6 pt-6 border-t border-border grid gap-4 grid-cols-2 lg:grid-cols-4">
        <div class="bg-gray-50 rounded-xl p-4">
          <p class="text-xs font-bold text-text-muted uppercase tracking-wider mb-1">Tổng số khoản</p>
          <p class="text-2xl font-bold text-text-dark" id="feeTotal">0</p>
        </div>
        <div class="bg-green-50 rounded-xl p-4">
          <p class="text-xs font-bold text-green-600 uppercase tracking-wider mb-1">Đang áp dụng</p>
          <p class="text-2xl font-bold text-green-700" id="feeActive">0</p>
        </div>
        <div class="bg-amber-50 rounded-xl p-4">
          <p class="text-xs font-bold text-amber-600 uppercase tracking-wider mb-1">Sắp đến hạn</p>
          <p class="text-2xl font-bold text-amber-700" id="feeDueSoon">0</p>
        </div>
        <div class="bg-red-50 rounded-xl p-4">
          <p class="text-xs font-bold text-red-600 uppercase tracking-wider mb-1">Quá hạn</p>
          <p class="text-2xl font-bold text-red-700" id="feeOverdue">0</p>
        </div>
      </div>
    </div>

    <!-- Table Section -->
    <div class="bg-white/80 backdrop-blur-sm border border-blue-50 rounded-2xl shadow-sm overflow-hidden">
      <div class="flex items-center justify-between p-4 border-b border-blue-100 bg-blue-50/30">
        <h3 class="text-sm font-bold text-text-muted uppercase tracking-wider">Danh sách khoản phí</h3>
        <button type="button" class="text-sm font-medium text-blue-600 hover:text-blue-700 flex items-center gap-1"
          onclick="exportFees()">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          Xuất CSV
        </button>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
          <thead>
            <tr class="bg-blue-50/50 border-b border-blue-100 text-xs font-bold text-blue-900 uppercase tracking-wider">
              <th class="px-6 py-4">Tên khoản phí</th>
              <th class="px-6 py-4">Loại</th>
              <th class="px-6 py-4">Số tiền</th>
              <th class="px-6 py-4">Áp dụng</th>
              <th class="px-6 py-4">Năm học</th>
              <th class="px-6 py-4">Hạn nộp</th>
              <th class="px-6 py-4 text-right">Thao tác</th>
            </tr>
          </thead>
          <tbody id="feeList" class="divide-y divide-border">
            <tr>
              <td colspan="7" class="px-6 py-12 text-center text-text-muted">
                <div class="flex flex-col items-center justify-center">
                  <svg class="w-10 h-10 mb-3 text-primary-200 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor"
                      d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z">
                    </path>
                  </svg>
                  <p>Đang tải dữ liệu...</p>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div id="pagination" class="flex items-center justify-center gap-2 p-4 border-t border-gray-200 bg-gray-50">
      </div>
    </div>
  </div>

  <script>
    const userPermissions = {
      canCreate: <%= user && user.hasPermission && user.hasPermission('canCreate') ? 'true' : 'false' %>,
      canUpdate: <%= user && user.hasPermission && user.hasPermission('canUpdate') ? 'true' : 'false' %>,
        canDelete: <%= user && user.hasPermission && user.hasPermission('canDelete') ? 'true' : 'false' %>,
  };

    const feeTableBody = document.getElementById('feeList');
    const paginationEl = document.getElementById('pagination');
    const filterForm = document.getElementById('filterForm');
    const feeStatsCard = document.getElementById('feeStats');
    const feeStatsValues = {
      total: document.getElementById('feeTotal'),
      active: document.getElementById('feeActive'),
      dueSoon: document.getElementById('feeDueSoon'),
      overdue: document.getElementById('feeOverdue'),
    };

    let currentPage = 1;
    let currentFilters = {};
    let currentRequest = null;

    async function loadFees(page = 1, filters = {}) {
      currentPage = page;
      currentFilters = filters;
      if (currentRequest) {
        currentRequest.abort();
      }
      currentRequest = new AbortController();

      // Show loading only on first load or filter change
      if (page === 1) setLoadingState(true);

      try {
        const params = new URLSearchParams({ page, limit: 20, isActive: true, ...filters });
        const response = await fetch(`/api/v1/fees?${params}`, {
          credentials: 'include',
          signal: currentRequest.signal,
        });
        if (!response.ok) throw new Error('Failed to load fees');
        const result = await response.json();
        renderFees(result.data);
        renderPagination(result.meta);
        updateFeeStats(result.data || []);
      } catch (error) {
        if (error.name === 'AbortError') return;
        feeTableBody.innerHTML = `
        <tr>
          <td colspan="7" class="px-6 py-12 text-center text-danger">
            <p>Không thể tải dữ liệu. Vui lòng thử lại sau.</p>
          </td>
        </tr>`;
        paginationEl.innerHTML = '';
      }
    }

    function renderFees(fees) {
      if (!fees || fees.length === 0) {
        feeTableBody.innerHTML = `
        <tr>
          <td colspan="7" class="px-6 py-12 text-center text-text-muted">
            <div class="flex flex-col items-center justify-center">
              <svg class="w-12 h-12 mb-3 text-gray-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" /></svg>
              <p>Chưa có khoản phí nào phù hợp.</p>
            </div>
          </td>
        </tr>`;
        return;
      }

      const currency = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' });

      feeTableBody.innerHTML = fees.map((f) => {
        const dueDate = f.dueDate ? new Date(f.dueDate).toLocaleDateString('vi-VN') : '--';
        const amount = currency.format(f.amount);
        const dueBadge = getDueBadge(f.dueDate);

        return `
        <tr class="hover:bg-gray-50 transition-colors group">
          <td class="px-6 py-4 font-semibold text-gray-900">${f.feeName}</td>
          <td class="px-6 py-4 text-sm text-gray-500">${f.feeType}</td>
          <td class="px-6 py-4 font-mono font-bold text-blue-600">${amount}</td>
          <td class="px-6 py-4 text-sm text-text-muted">${f.appliesTo}</td>
          <td class="px-6 py-4 text-sm text-text-muted">
            ${f.academicYear} <span class="text-xs bg-gray-100 px-1.5 py-0.5 rounded ml-1">HK${f.semester || 'All'}</span>
          </td>
          <td class="px-6 py-4 text-sm text-text-muted">
            <div class="flex items-center gap-2">
              ${dueDate}
              ${dueBadge}
            </div>
          </td>
          <td class="px-6 py-4 text-right">
            <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
              ${userPermissions.canUpdate ? `
                <a href="/fees/${f._id}/edit" class="p-1.5 rounded-lg text-text-muted hover:bg-amber-50 hover:text-amber-600 transition-colors" title="Sửa">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
                </a>
              ` : ''}
              ${userPermissions.canDelete ? `
                <button onclick="deleteFee('${f._id}')" class="p-1.5 rounded-lg text-text-muted hover:bg-red-50 hover:text-red-600 transition-colors" title="Xóa">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                </button>
              ` : ''}
            </div>
          </td>
        </tr>
      `;
      }).join('');
    }

    function renderPagination(meta) {
      const pagination = paginationEl;
      if (!meta) {
        pagination.innerHTML = '';
        return;
      }
      const totalPages = Math.ceil(meta.total / meta.limit);
      if (totalPages <= 1) {
        pagination.innerHTML = '';
        return;
      }

      let html = '';

      // Previous
      html += `
      <button 
        ${meta.page === 1 ? 'disabled' : ''} 
        onclick="loadFees(${meta.page - 1}, getFilters())"
        class="p-2 rounded-lg border border-gray-200 bg-white text-gray-500 hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
      </button>
    `;

      // Pages
      for (let i = 1; i <= totalPages; i++) {
        if (i === 1 || i === totalPages || Math.abs(i - meta.page) <= 1) {
          const activeClass = i === meta.page
            ? 'bg-blue-600 text-white border-blue-600 shadow-md shadow-blue-500/30'
            : 'bg-white text-gray-500 border-gray-200 hover:bg-gray-50 hover:text-blue-600';

          html += `
          <button 
            onclick="loadFees(${i}, getFilters())"
            class="min-w-[40px] h-10 rounded-lg border text-sm font-medium transition-colors ${activeClass}"
          >
            ${i}
          </button>
        `;
        } else if (Math.abs(i - meta.page) === 2) {
          html += '<span class="px-2 text-text-muted">...</span>';
        }
      }

      // Next
      html += `
      <button 
        ${!meta.hasNext ? 'disabled' : ''} 
        onclick="loadFees(${meta.page + 1}, getFilters())"
        class="p-2 rounded-lg border border-gray-200 bg-white text-gray-500 hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
      </button>
    `;

      pagination.innerHTML = html;
    }

    function getFilters() {
      const formData = new FormData(filterForm);
      const filters = {};
      for (let [key, value] of formData.entries()) {
        if (value) filters[key] = value;
      }
      return filters;
    }

    filterForm.addEventListener('submit', (e) => {
      e.preventDefault();
      loadFees(1, getFilters());
    });

    async function deleteFee(id) {
      if (!confirm('Bạn có chắc chắn muốn xóa khoản phí này?')) return;

      try {
        const response = await fetch(`/api/v1/fees/${id}`, {
          method: 'DELETE',
          credentials: 'include'
        });

        if (!response.ok) {
          const error = await response.json();
          throw new Error(error.message || 'Không thể xóa khoản phí');
        }

        window.showToast?.('Xóa khoản phí thành công', 'success');
        loadFees(currentPage, currentFilters);
      } catch (error) {
        window.showToast?.('Lỗi: ' + error.message, 'error');
      }
    }

    function resetFilters() {
      filterForm.reset();
      loadFees(1, {});
    }

    function setLoadingState(isLoading) {
      if (isLoading) {
        feeTableBody.innerHTML = Array.from({ length: 3 }).map(() => `
        <tr>
          <td colspan="7" class="px-6 py-4">
            <div class="animate-pulse flex space-x-4">
              <div class="h-4 bg-gray-50 rounded w-3/4"></div>
            </div>
          </td>
        </tr>
      `).join('');
      }
    }

    function updateFeeStats(fees) {
      if (!fees.length) {
        feeStatsCard.classList.add('hidden');
        return;
      }
      const now = new Date();
      const counts = fees.reduce(
        (acc, fee) => {
          if (fee.isActive) acc.active += 1;
          if (fee.dueDate) {
            const due = new Date(fee.dueDate);
            const diff = (due - now) / (1000 * 60 * 60 * 24);
            if (diff < 0) acc.overdue += 1;
            else if (diff <= 7) acc.dueSoon += 1;
          }
          return acc;
        },
        { total: fees.length, active: 0, dueSoon: 0, overdue: 0 }
      );
      feeStatsValues.total.textContent = counts.total;
      feeStatsValues.active.textContent = counts.active;
      feeStatsValues.dueSoon.textContent = counts.dueSoon;
      feeStatsValues.overdue.textContent = counts.overdue;
      feeStatsCard.classList.remove('hidden');
    }

    function getDueBadge(dueDate) {
      if (!dueDate) return '';
      const now = new Date();
      const due = new Date(dueDate);
      const diff = (due - now) / (1000 * 60 * 60 * 24);
      if (diff < 0) {
        return `<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">Quá hạn</span>`;
      }
      if (diff <= 7) {
        return `<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-800">Sắp đến hạn</span>`;
      }
      return '';
    }

    async function exportFees() {
      try {
        const params = new URLSearchParams({ ...currentFilters, limit: 1000, isActive: true });
        const response = await fetch(`/api/v1/fees?${params}`, { credentials: 'include' });
        if (!response.ok) throw new Error('Không thể tải dữ liệu xuất file');
        const result = await response.json();
        const fees = result.data || [];
        if (!fees.length) {
          window.showToast?.('Không có dữ liệu để xuất', 'info');
          return;
        }
        const headers = ['Tên phí', 'Loại', 'Số tiền', 'Áp dụng', 'Năm học', 'Học kỳ', 'Hạn nộp'];
        const rows = fees.map((fee) => [
          fee.feeName,
          fee.feeType,
          fee.amount,
          fee.appliesTo,
          fee.academicYear,
          fee.semester || 'Cả năm',
          fee.dueDate ? new Date(fee.dueDate).toLocaleDateString('vi-VN') : '',
        ]);
        const csvContent = [headers.join(','), ...rows.map((row) => row.map((cell) => `"${cell}"`).join(','))].join('\n');
        const blob = new Blob(['\uFEFF' + csvContent], { type: 'text/csv;charset=utf-8;' });
        const url = URL.createObjectURL(blob);
        const link = document.createElement('a');
        link.href = url;
        link.download = `danh-sach-khoan-phi-${new Date().toISOString().split('T')[0]}.csv`;
        link.click();
        URL.revokeObjectURL(url);
        window.showToast?.('Đã xuất file CSV thành công', 'success');
      } catch (error) {
        window.showToast?.('Không thể xuất CSV: ' + error.message, 'error');
      }
    }

    loadFees();
  </script>

  <%- include('../partials/dashboard-layout-footer') %>